{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avanti-pizza/api-interface": ["libs/api-interface/src/index.ts"],
      "@avanti-pizza/common/ui/custom-material": ["libs/common/ui/custom-material/src/index.ts"],
      "@avanti-pizza/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@avanti-pizza/menu/feature-search": ["libs/menu/feature-search/src/index.ts"],
      "@avanti-pizza/menu/feature-shell": ["libs/menu/feature-shell/src/index.ts"],
      "@avanti-pizza/menu/data-access": ["libs/menu/data-access/src/index.ts"],
      "@avanti-pizza/core/config": ["libs/core/config/src/index.ts"],
      "@avanti-pizza/common/pipes": ["libs/common/pipes/src/index.ts"],
      "@avanti-pizza/common/styles": ["libs/common/styles/src/index.ts"],
      "@avanti-pizza/menu/feature-calculate": ["libs/menu/feature-calculate/src/index.ts"],
      "@avanti-pizza/toppings/data-access": ["libs/toppings/data-access/src/index.ts"],
      "@avanti-pizza/common/utils": ["libs/common/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
